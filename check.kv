WindowManager:
    MainWindow
    UpdateWindow
    CameraClick

<MainWindow>
    name: "main"
    GridLayout:
        rows:2
        BoxLayout:

        BoxLayout:
            orientation: 'horizontal'
            size_hint: [0.95, .2]
            
            Button:
                text: 'Track'
                size_hint: [1, 1.]
                on_release: app.root.current = "camera"
            Button:
                text:'Update'
                size_hint: [1, 1.]
                on_release: app.root.current = "update"
    Label:
        text: "main"

<UpdateWindow>
    name: "update"
    id: update_window
    GridLayout:
        rows:2
        id: grid
        #orientation: "vertical"
        #FileChooserListView:
        BoxLayout:
            orientation: 'horizontal'
            FileChooserIconView:
                id:filechooser
                path: root.get_default_path()
                filters: [root.show_only_images]
                on_selection: update_window.selected(filechooser.selection)
            Image:
                id:image
                source:""
                

        BoxLayout:
            orientation: 'horizontal'
            size_hint: [0.95, .2]
            Button:
                text: 'Upload'
                size_hint: [1, 1.]
                on_release: root.show_load()
            Button:
                text: 'Synchronize'
                size_hint: [1, 1.]
                on_release: root.sync_press()
            Button:
                text:'Go Back'
                size_hint: [1, 1.]
                on_release: app.root.current = "main"


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
<CameraClick>:
    name: "camera"
    orientation: 'vertical'    
    
    MyCamera:
        id: cam0
        size_hint: [1.,0.7]
        #resolution: 1920, 1080
        play: False
        canvas.before:
            PushMatrix
            Rotate:
                angle: 0
                #angle: -90
                
                origin: self.center
        canvas.after:
            PopMatrix

    BoxLayout:
        size_hint: [1, .2]
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: [1.,0.5]
            Button:
                text: "Play"
                on_press: cam0.play = not cam0.play
            
            Button:
                text: "Go Back"
                on_press: cam0.play = False
                on_release: app.root.current = "main" 
        Label:
            id: label
            size_hint: [1.,0.5]
            text: 'text'
            color: 1., 1, 1., 1.
            
            font_size: 40
            background_color: (0.36, 0.55, 0.77, 1)
            size: self.texture_size
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size
            #text_size: root.width, None
            #size: self.texture_size

